  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^16.18.0",
    "axios": "^1.6.0",
    "react-router-dom": "^6.8.0",
    "@types/react-router-dom": "^5.3.3",
    "react-query": "^3.39.0",
    "zustand": "^4.4.0",
    "date-fns": "^2.30.0",
    "react-hook-form": "^7.48.0",
    "react-hot-toast": "^2.4.0",
    "lucide-react": "^0.294.0"
